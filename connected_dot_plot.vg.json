{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 300,
    "title": {"text": "Average Social Support Rate by Continents", "fontSize": 20},
    "data": {
      "url": "https://raw.githubusercontent.com/easonnp/DataVis2/main/WHR2023_AvgSocialSupport.csv"
    },
    "transform": [
      {
        "filter": {
          "field": "Continent",
          "oneOf": ["Europe", "Oceania", "North America", "South America", "Asia", "Africa"]
        }
      },
      {
        "filter": {
          "field": "Status_of_country",
          "oneOf": ["Developed", "Developing"]
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "Avg_social_support",
        "type": "quantitative",
        "title": "Average Social Support Rate"
      },
      "y": {
        "field": "Continent",
        "type": "nominal",
        "title": "Continent",
        "axis": {
          "offset": 5,
          "ticks": false,
          "minExtent": 70,
          "domain": false
        },
        "sort": ["Europe", "Oceania", "North America", "South America", "Asia", "Africa"]
      }
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "detail": {
            "field": "Continent",
            "type": "nominal"
          },
          "color": {"value": "#C0C0C0"},
          "size": {"value": 13}
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true
        },
        "encoding": {
          "color": {
            "field": "Status_of_country",
            "type": "nominal",
            "scale": {
              "domain": ["Developed", "Developing"],
              "range": ["#e6959c", "#911a24"]
            },
            "title": "Status of Country"
          },
          "size": {"value": 200},
          "opacity": {"value": 1},
          "tooltip": [
            {"field": "Continent", "type": "nominal"},
            {"field": "Status_of_country", "type": "nominal", "title": "Status of Country"},
            {"field": "Avg_social_support", "title": "Average Social Support Rate", "type": "quantitative", "format": ","}
            ]
        }
      }
    ],
    "config": {
      "background": "#faf1e5"
  }
}
  